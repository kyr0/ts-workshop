{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2016",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./build"
    },
    "include": [
        "src/**/*.ts"
    ]
}
